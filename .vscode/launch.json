{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "0.0.0.0",
                "--port", "7777",
                "--reload"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/configs/.env"
        },
        {
            "name": "Python: FastAPI (No Reload)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "0.0.0.0",
                "--port", "7777"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/configs/.env"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/configs/.env"
        },
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/configs/.env"
        }
    ]
}